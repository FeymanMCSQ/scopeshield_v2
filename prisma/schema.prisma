generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id
  email     String?  @unique
  createdAt DateTime @default(now())
  clients   Client[]
  tickets   Ticket[]
}

model Client {
  id        String   @id @default(uuid())
  userId    String
  name      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tickets   Ticket[]

  @@index([userId])
}

model Ticket {
  id         String       @id @default(uuid())
  publicId   String       @unique
  userId     String
  clientId   String
  message    String
  priceCents Int
  assetUrl   String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  status     TicketStatus
  client     Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([clientId])
}

model Device {
  id         String    @id @default(uuid())
  userId     String
  tokenHash  String    @unique
  label      String?
  userAgent  String?
  createdAt  DateTime  @default(now())
  lastSeenAt DateTime?
  revokedAt  DateTime?

  @@index([userId])
}

model PairingToken {
  id        String    @id @default(uuid())
  tokenHash String    @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
}

enum TicketStatus {
  pending
  approved
  paid
  rejected
}
